{
    "compileOnSave": true,
    "compilerOptions": {
        "rootDir": "./src",
        "outDir": "./dist",
        "target": "ES6",
        "module": "ES6",
        "moduleResolution": "node",
        "sourceMap": true,
        "types": [ "jasmine", "node" ],
        "typeRoots": [ "./node_modules/@types" ],
        "lib": [ "es2016", "dom" ]
    },
    "include": [
        "./src/**/*.ts"
    ],
    "exclude": [
        "./node_modules",
    ]
}
